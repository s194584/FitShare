<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewWorkoutDetailsFragment"
    android:id="@+id/workout_details_fragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/workout_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10sp"
        android:text="Workout name: worukoutt"
        android:textSize="20sp" />

    <Button
        android:id="@+id/delete_workout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/delete_workout"/>

    <Button
        android:id="@+id/start_workout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_workout"
        android:layout_below="@id/delete_workout_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/workout_name_view"/>

</RelativeLayout>