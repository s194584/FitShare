<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewWorkoutDetailsFragment"
    android:id="@+id/workout_details_fragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/workout_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Name: workout"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/workout_difficulty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty: Medium"
        android:layout_below="@+id/workout_name_view"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/workout_type_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: Strength"
        android:layout_below="@+id/workout_difficulty_view"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/workout_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_name_view"
        android:layout_marginStart="180dp"
        android:layout_marginTop="15dp"
        android:text="Estimated time: 120:00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/workout_creator_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_time_view"
        android:layout_marginStart="180dp"
        android:layout_marginTop="15dp"
        android:text="Creator: SkinnyP3n1s123"
        android:textSize="18sp" />

    <Button
        android:id="@+id/start_workout_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text="@string/start_workout" />

    <Button
        android:id="@+id/delete_workout_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="80dp"
        android:layout_toEndOf="@+id/start_workout_button"
        android:text="@string/delete_workout" />

    <Button
        android:id="@+id/edit_workout_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:layout_toStartOf="@+id/start_workout_button"
        android:text="@string/edit_workout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercisedetailsRV"
        android:layout_width="wrap_content"
        android:layout_height="420dp"
        android:layout_above="@+id/start_workout_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>