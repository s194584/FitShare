<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BrowsePublicWorkoutsFragment"
    android:padding="8dp"
    android:id="@+id/browse_workout_layout"
    android:layout_marginTop="5dp"
    android:background="@drawable/baggrund_400x50">



    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/workout_info_text"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:text="@string/name_withdots"
        android:textSize="15sp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/workout_type"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:text="@string/strength_withdots"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:layout_toEndOf="@id/workout_difficulty"
        android:layout_below="@+id/workout_info_text" />

    <TextView
        android:id="@+id/workout_difficulty"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_info_text"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:text="@string/difficulty_medium"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/workout_time"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/workout_type"
        android:layout_below="@+id/workout_info_text"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:text="@string/time_120_00" />

    <Button
        android:id="@+id/startworkoutfrombrowser_button"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/workout_info_text"
        android:text="@string/start_withdots"
        android:textAlignment="center"
        android:textSize="11dp"
        tools:ignore="SpUsage" />


</RelativeLayout>